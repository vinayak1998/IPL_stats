<%- include ('partials/header.ejs'); -%>
    <div class="btn-group">
        <form action="/interesting_facts_bat" >
             <button type="submit">Batting</button>
        </form>
        <form action="/interesting_facts_bowling" >
             <button type="submit">Bowling</button>
        </form>
    </div>
</br>
</br>
    <div class="btn-group">
        <form action="/interesting_facts/runs" >
             <button type="submit">Most Runs</button>
        </form>
        <form action="/interesting_facts/tscore" >
             <button type="submit">Top Most Score</button>
        </form>
        <form action="/interesting_facts/strike" >
             <button type="submit">Highest Strike Rate</button>
        </form>
        <form action="/interesting_facts/f50" >
             <button type="submit">Fastest 50</button>
        </form>
        <form action="/interesting_facts/f100" >
             <button type="submit">Fastest 100</button>
        </form>
        <form action="/interesting_facts/m50" >
             <button type="submit">Most 50s</button>
        </form>
        <form action="/interesting_facts/m100" >
             <button type="submit">Most 100s</button>
        </form>
        <form action="/interesting_facts/m4" >
             <button type="submit">Most 4s</button>
        </form>
        <form action="/interesting_facts/m6" >
             <button type="submit">Most 6s</button>
        </form>
    </div>
    <form class="add-player-form" action="/batting_stats/sort_by_runs_cond" method="post" enctype="multipart/form-data">
        <div class="form-row">
             <div class="form-group col-md-4"><h5>more than how much runs</h5>
                    <input type="number" class="form-control" name="cond" id="cond" placeholder="select" required>
            </div>
        </div>
        <button type="submit" class="btn btn-primary float-right">Show</button>
    </form>

        
    
    <div class="table-wrapper">
        <% if (player.length > 0) {%>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
            <table class="table table-hovered" id="myTable">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Against Team</th>
                        <th scope="col">Match Date</th>
                        <th scope="col">Balls Played</th>
                        <th scope="col">Number of 6s</th>
                        <th scope="col">Number of 4s</th>
                        <th scope="col">Total Runs</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < player.length; i++) { %>
                    
                        <tr>
                            <th scope="row"><%= player[i].player_name %></th>
                            <td><%= player[i].against %></td>
                            <td><%= player[i].match_date %></td>
                            <td><%= player[i].balls_faced %></td>
                            <td><%= player[i].num_6s %></td>
                            <td><%= player[i].num_4s %></td>
                            <td><%= player[i].runs %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>