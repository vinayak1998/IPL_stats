<%- include ('partials/header.ejs'); -%>
    <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                <select id="selecttype" name="selecttype" class="form-control" required>
                    <option selected disabled>Choose option</option>
                    <option value = 'six' id ='1'>Most sixes</option>
                    <option value = 'four' id ='2'>Most fours</option>
                    <option value = 'fifty' id ='3'>Most fifties</option>
                    <option value = 'wicket' id ='4'>Most wickets</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary float-right">select</button>
    </form>
    <div class="table-wrapper">
        <% if (player.length > 0) {%>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
            <table class="table table-hovered" id="myTable">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Player Name</th>
                        <th scope="col">DOB</th>
                        <th scope="col">Batting Hand</th>
                        <th scope="col">Bowling Skill</th>
                        <th scope="col">Country</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < player.length; i++) { %>
                    
                        <tr>
                            <th scope="row"><%= player[i].player_name %></th>
                            <th><%= player[i].dob %></th>
                            <th><%= player[i].batting_hand %></th>
                            <th><%= player[i].bowling_skill %></th>
                            <th><%= player[i].country_name %></th>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No players found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html> 